<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ph.edu.dlsu.lbycpei.caferecommmendationsystem.InventoryController">
    <top>
        <Label text="Inventory Management" style="-fx-font-size: 24; -fx-padding: 20;" />
        <Button text="Back to Main Menu" onAction="#handleBackToMain" />

    </top>


    <center>
        <TableView fx:id="inventoryTable" prefHeight="400" prefWidth="600">
            <columns>
                <TableColumn fx:id="colName" text="Item Name" prefWidth="200" />
                <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="100" />
                <TableColumn fx:id="colCategory" text="Category" prefWidth="150" />
            </columns>
        </TableView>
    </center>


    <bottom>
        <HBox spacing="10" style="-fx-padding: 20;">
            <TextField fx:id="txtName" promptText="Item Name" />
            <TextField fx:id="txtQuantity" promptText="Quantity" />
            <TextField fx:id="txtCategory" promptText="Category" />
            <Button text="Add" onAction="#handleAdd" />
            <Button text="Update" onAction="#handleUpdate" />
            <Button text="Delete" onAction="#handleDelete" />
        </HBox>
    </bottom>
</BorderPane>
